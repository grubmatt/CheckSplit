<div class="ten_offset">
  <h4> Items </h4>
  <table class="table">
    <thead>
      <tr>
        <th>Cost</th>
        <th>Item Info</th>
        <th>People Paying</th>
        <% if current_user == @order.person %>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
  <% @order_items.each do |item| %>
    <tr>
      <td>$ <%= item.cost %></td>
      <td><%= item.description %></td>
      <td><%= item.splitters %></td>
      <% if current_user == @order.person %>
        <td><%= link_to 'X', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "red_button" %></td>
      <% end %>
    </tr>
  <% end %>
  </table>
</div>