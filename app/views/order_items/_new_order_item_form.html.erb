<div id="new_item">
  <%= form_for @order_item, remote: true do |f| %>
    <div class="row">
      <% if @order_item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
          <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="two_one">
        <div class="group">
          <%= f.label :description %><br>
          <%= f.text_field :description %>
        </div>
      </div>
      <div class="two_col">
        <div class="group">
          <%= f.label :cost %>
          <%= f.text_field :cost %>
        </div>
      </div>
      <div class="four_col">
        <div class="group">
          <%= f.label :people %>
          <%= f.select :people, Person.all.collect {|p| [ p.proper_name, p.id ]}, {}, { :multiple => true } %>
        </div>
      </div>
      <%= f.hidden_field :order_id, value: params[:order_id] %>
    </div>
    <div class="row">
      <div class="five_offset">
        <div class="group">
          <%= f.submit "Add Item" %>
          <%= link_to 'Cancel', order_path(params[:order_id]), class: "red_button" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
